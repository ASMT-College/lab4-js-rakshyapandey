<script>
    function validate(){
        var emailValue = document.getElementById("email").value;
        if(emailValue.match(/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/)){
            alert("Valid Email.");
            return true;
        }
        else{
            alert("Enter valid email id.");
            return false;
        }
    }
</script>
